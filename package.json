{
  "name": "v2ex-share-helper",
  "displayName": "V2ex share helper",
  "version": "0.0.1",
  "description": "Easily share V2EX articles and comments with a single click",
  "author": "botshen",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "plasmo": "0.86.3",
    "react": "18.2.0",
    "downloadjs": "^1.4.7",
    "html-to-image": "^1.11.11",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "*://*.v2ex.com/*"
    ],
    "permissions": [
      "activeTab",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "<all_urls>"
        ],
        "resources": [
          "tabs/App.html"
        ]
      }
    ]
  }
}
